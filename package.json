{
  "name": "break",
  "version": "1.0.0",
  "description": "A minimal app reminding you to take a break. Take your health seriously!",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "tsc && electron .",
    "package": "tsc && electron-forge package",
    "make": "tsc && electron-forge make"
  },
  "repository": "https://github.com/phillippschmedt/break",
  "author": "Phillipp Schmedt",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.53",
    "@electron-forge/maker-deb": "^6.0.0-beta.53",
    "@electron-forge/maker-rpm": "^6.0.0-beta.53",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.53",
    "@electron-forge/maker-zip": "^6.0.0-beta.53",
    "electron": "^9.0.4",
    "electron-reloader": "^1.0.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "main": "./dist/main.js",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/break"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "break"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
